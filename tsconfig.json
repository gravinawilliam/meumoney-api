{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./src/custom_typings"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@modules/*":["./src/modules/*"],
      "@config/*":["./src/config/*"],
      "@shared/*":["./src/shared/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "strictPropertyInitialization": false,
    "types": ["node", "jest"]
  },
  "include":[
    "src/**/*"
  ]
}
